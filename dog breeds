class Dog:
    species = "dog"
    def __init__(self, breed, color):
        self.breed = breed
        self.color = color
scribbles = Dog("poodle", "brown")
gidget = Dog("chihuahua", "tan")
print("scribbles is a {}", format(scribbles.species))
print("scribbles is a {} {}", format(scribbles.breed, scribbles.color))
print("gidget is a {}", format(gidget.species))
print("gidget is a {} {}", format(gidget.breed, gidget.color))
 
